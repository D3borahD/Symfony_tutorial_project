{% extends 'base.html.twig' %}

{% block title %}
    SymRecipe - Recettes de la communauté
{% endblock %}

{% block body %}
        <div class="container mt-4">
            {% if not recipes.items is same as ([]) %}
                <h1>Recette de la communauté</h1>
                <div class="d-flex justify-content-center flex-wrap">
                    {% for recipe in recipes %}
                        <div class="card border-primary mb-3 mx-3" style="max-width: 20rem;">
                            <div class="card-header">Recette numéro : {{ recipe.id }}</div>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="{{ path('recipe.show', {id: recipe.id}) }}">{{ recipe.name }}</a>
                                </h4>
                                <p class="card-text">{{ recipe.description|slice(0, 100) ~ '...'}}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="navigation d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(recipes) }}
                </div>
            {% else %}
                <p>Il n'y a pas de recette</p>
            {% endif %}
        </div>
{% endblock %}



